<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <!-- Run the APM provided `sim_vehicle.py` SITL command -->
    <node pkg="ardupilot_sim" type="copter_sitl.sh" name="copter_sitl" />

    <!-- Start Gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find nasa_s2d_sim)/worlds/simple_targets.world"/>
        <arg name="debug" value="false"/>
        <arg name="gui" value="true"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="verbose" value="true"/>
    </include>

    <!-- Spawn in Gazebo -->
    <include file="$(find ardupilot_sim)/launch/spawn_mav.launch">
        <arg name="mav_name"            value="sully" />
        <arg name="model"               value="$(find nasa_s2d_sim)/agents/sully/sully.xacro" />
        <arg name="x"                   value="-120"/>
        <arg name="y"                   value="0"/>
        <arg name="z"                   value="0.2"/>
        <arg name="yaw"                 value="0"/>
        <arg name="color"               value="Black"/>
    </include>

    <!-- Spawn moving agents -->
    <include file="$(find nasa_s2d_sim)/launch/movers.launch" />

    <!-- Start mavros and connect to a SITL Pixhawk running APM:Copter -->
    <include file="$(find mavros)/launch/apm.launch">
        <arg name="fcu_url"  value="udp://127.0.0.1:14550@" />
    </include>

    <!-- <node name="gcs_bridge" pkg="mavros" type="gcs_bridge"> -->
        <!-- You can connect locally using localhost on port 14550 -->
        <!-- <param name="gcs_url" value="udp://@127.0.0.1:14555" /> -->
    <!-- </node> -->

    <!-- Run a series of mavros mavsys commands to increase sensor pub rate -->
    <node name="gofast" pkg="nasa_s2d" type="gofast.sh" output="screen" />

    <!-- launch visual_mtt -->
    <include file="$(find visual_mtt)/launch/visual_mtt.launch">
        <arg name="params" value="$(find nasa_s2d)/param/sully.yaml" />
        <arg name="tuning" value="false" />
        <arg name="imgtopic" value="/camera/image_raw" />
    </include>
</launch>