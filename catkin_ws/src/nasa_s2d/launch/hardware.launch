<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <!-- Start mavros and connect to a Pixhawk running APM:Copter -->
    <include file="$(find nasa_s2d)/launch/mavros.launch">
        <!-- Pixhawk is on TX2 UART 1 -->
        <!-- Baud is set by SERIAL2_BUAD param in APM:Copter -->
        <arg name="fcu_url"  value="/dev/ttyTHS2:921600" />
    </include>

    <!-- Connect to ueye camera and publish camera/image_raw topic and camera_info -->
    <include file="$(find nasa_s2d)/launch/run-camera.launch" />

    <!-- Kick off the Safe2Ditch system: DSS and VAL -->
    <include file="$(find nasa_s2d)/launch/safe2ditch.launch" />
</launch>
